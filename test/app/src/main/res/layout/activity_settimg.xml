<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.SettingActivity"
    android:orientation="vertical"
    android:background="#E4E4E4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#335495"
        android:orientation="horizontal"
        android:paddingVertical="20dp">
        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="설 정"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingTop="20dp"
        android:background="#fefefe">

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/set_bell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:text="알림"
            android:textSize="20dp"
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="알림 볼륨"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"/>
        <SeekBar
            android:id="@+id/set_bell_volume"
            android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:min="0"
            android:max="100"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_marginTop="30dp"
            android:id="@+id/set_vibration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:text="진동"
            android:textSize="20dp"
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginLeft="10dp"
            android:text="진동 세기"
            android:textSize="18dp"
            android:fontFamily="@font/aa"
            android:includeFontPadding="false"/>
        <SeekBar
            android:id="@+id/set_vibration_volume"
            android:layout_width="match_parent"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="10dp"
            android:min="0"
            android:max="254"/>
    </LinearLayout>
    <TextView
        android:layout_marginVertical="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/set_secession"
        android:layout_width="match_parent"
        android:paddingVertical="10dp"
        android:layout_height="wrap_content"
        android:text="회원탈퇴"
        android:textSize="17dp"
        android:textColor="#757575"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/aa"
        android:includeFontPadding="false"/>
    <TextView
        android:layout_marginLeft="30dp"
        android:id="@+id/set_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:text="로그아웃"
        android:textSize="17dp"
        android:textColor="#757575"
        android:fontFamily="@font/aa"
        android:includeFontPadding="false"/>

</LinearLayout>