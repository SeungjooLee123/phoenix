<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.SettimgActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#44526C"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/setting_back"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/arrow_back"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="설 정"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="50dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.7"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <Switch
            android:id="@+id/set_bell"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="알림"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="알림 볼륨"
            android:textSize="20dp"/>
        <SeekBar
            android:id="@+id/set_bell_volume"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <Switch
            android:id="@+id/set_vibration"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="진동"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="진동 세기"
            android:textSize="20dp"/>
        <SeekBar
            android:id="@+id/set_vibration_volume"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/set_secession"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="회원탈퇴"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_gravity="center_vertical"/>
        </FrameLayout>

        <TextView
            android:id="@+id/set_logout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="로그아웃"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>