<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.RelationFragment"
    android:orientation="vertical"
    android:padding="30dp">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="아이에게 당신은\n누구인가요?"
        android:textColor="#44526C"
        android:textSize="30dp"
        android:textStyle="bold"
        >
    </TextView>


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_mother"
            android:background="@drawable/border_round_gray">
            <TextView
                android:id="@+id/tv_mother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFBABA"
                android:text="엄마"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_father"
            android:background="@drawable/border_round_gray">
            <TextView
                android:id="@+id/tv_father"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFBABA"
                android:text="아빠"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_sitter"
            android:background="@drawable/border_round_gray">
            <TextView
                android:id="@+id/tv_sitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFBABA"
                android:text="시터"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_gmother"
            android:background="@drawable/border_round_gray">
            <TextView
                android:id="@+id/tv_gmother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFBABA"
                android:text="할머니"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_gfather"
            android:background="@drawable/border_round_gray">
            <TextView
                android:id="@+id/tv_gfather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFBABA"
                android:text="할아버지"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:id="@+id/btn_others"
            android:background="@drawable/border_round_gray">
            <TextView
                android:id="@+id/tv_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFBABA"
                android:text="가족"
                android:layout_gravity="center"
                android:textAlignment="center"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>