<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".my.EditFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#44526C">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/edit_cancel"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/arrow_back"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이 정보 수정"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#fff"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/edit_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="저장"
                android:textColor="#fff"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"/>

        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                android:backgroundTint="#E2EDEF"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/baby_img"
                    android:layout_gravity="center"/>
            </androidx.cardview.widget.CardView>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/edit_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher_background"
                app:riv_corner_radius="30dp"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/imv_camera"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/camera"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"/>


        </RelativeLayout>
        <!--<ImageView
            android:id="@+id/edit_photo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/bss_logo"
            android:background="@drawable/border_round"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="이름(별명)"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:background="@drawable/border_round_gray"
                android:layout_gravity="center_vertical">
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이름(별명)"
                    android:layout_margin="10dp"
                    android:background="#fff"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="성별"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/btn_man"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="남자"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/btn_woman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="여자"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="출생일"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/edit_birth"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="wrap_content"
                android:background="@drawable/border_round_gray"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/tv_birth"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1999/06/30"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="나와의 관계"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/my_rels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="엄마"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D6D6D6"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="저장"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_del"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="삭제"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>