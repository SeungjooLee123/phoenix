<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sns.SnsNewActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/sns_back"
            android:id="@+id/sns_new_back"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/getImage"
            android:src="@drawable/sns_camera"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="공유"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:id="@+id/sns_new_share"/>
    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:scaleType="fitXY"
        android:layout_weight="5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/sns_new_img_rec"
        android:orientation="horizontal"/>

  <EditText
      android:layout_weight="4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/sns_new_text"
      android:textSize="20dp"
      android:hint="내용을 작성하세요"/>

</LinearLayout>