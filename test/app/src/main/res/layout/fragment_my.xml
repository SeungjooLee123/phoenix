<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.MyFragment"
    android:orientation="vertical"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#44526C">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/my_grow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성장곡선"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#fff"
                android:layout_marginLeft="20dp"/>
            <Spinner
                android:id="@+id/my_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
            <ImageView
                android:id="@+id/my_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/settings"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="30dp">
        <TextView
            android:id="@+id/my_diary_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="~~의 육아일기"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/my_diary_title_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_menu_edit"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/my_main_photo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/border_round"
                android:src="@drawable/bss_logo" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/my_gender_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:background="@drawable/tv_custom"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/my_gender_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    android:textSize="17dp"
                    android:padding="10dp"
                    android:background="@drawable/tv_custom"/>
                </LinearLayout>
            <ImageView
                android:id="@+id/my_detail"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/my_next" />
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tv_custom"
            android:backgroundTint="#E2E2E2"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/my_birth_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="출생일"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tv_custom"
            android:backgroundTint="#E2E2E2"
            android:layout_marginBottom="40dp">
            <TextView
                android:id="@+id/my_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="17dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_co_parent"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="공동 양육자"
                android:textSize="16dp"
                android:backgroundTint="#44526C"
                android:textColor="#fff"
                android:background="@drawable/tv_custom"
                android:layout_marginRight="10dp" />
            <Button
                android:id="@+id/delete_baby"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="아이 정보 삭제"
                android:textColor="#fff"
                android:backgroundTint="#44526C"
                android:background="@drawable/tv_custom" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>