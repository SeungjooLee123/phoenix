<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".my.MyFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/my_grow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성장곡선"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"/>
            <Spinner
                android:id="@+id/my_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/my_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/settings"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="20dp"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9">
            <TextView
                android:id="@+id/my_diary_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~~의 육아일기"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="30dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"/>
        </FrameLayout>
        <ImageView
            android:id="@+id/my_diary_title_edit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/my_main_photo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_launcher_background"
                    android:layout_marginLeft="40dp"/>
                <TextView
                    android:id="@+id/my_gender_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:textSize="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="170dp"
                    android:padding="10dp"
                    android:background="@drawable/tv_custom"/>
                <TextView
                    android:id="@+id/my_gender_woman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    android:textSize="17dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="250dp"
                    android:padding="10dp"
                    android:background="@drawable/tv_custom"/>

                <ImageView
                    android:id="@+id/my_detail"
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/my_next" />
            </FrameLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/my_birth_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/tv_custom"
            android:text="출생일\n"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/my_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            android:text="이름\n"
            android:textSize="17dp"
            android:background="@drawable/tv_custom"/>
        <Button
            android:id="@+id/btn_co_parent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="  공동 양육자  "
            android:layout_marginTop="20dp"
            />
        <Button
            android:id="@+id/delete_baby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이 정보 삭제"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</LinearLayout>